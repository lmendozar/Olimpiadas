# ============================================
# OLIMPIADAS - Docker Environment Variables
# ============================================
# INSTRUCCIONES:
# 1. Copia este archivo como .env: cp env.docker.example .env
# 2. Edita los valores según tu configuración
# 3. Ejecuta: docker-compose up -d --build
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------
APP_NAME="Olimpiadas Management System"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_URL=http://localhost

# --------------------------------------------
# Database Connection
# --------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=olimpiadas
DB_USERNAME=olimpiadas_user
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_TOO

# --------------------------------------------
# Docker Ports
# --------------------------------------------
APP_PORT=80

# --------------------------------------------
# GitHub Repository
# --------------------------------------------
GITHUB_REPO=https://github.com/yourusername/olimpiadas.git
GITHUB_BRANCH=main

# --------------------------------------------
# Seed Database on First Run
# --------------------------------------------
DB_SEED=true

# --------------------------------------------
# Cache & Session
# --------------------------------------------
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_LIFETIME=120

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=info

